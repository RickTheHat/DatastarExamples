@{
    ViewData["Title"] = "Lazy Load (ASP.NET MVC)";
}

<div class="demo-section">
    <div style="display: flex; justify-content: space-between; gap: 1rem;">
        <a asp-controller="Home" asp-action="InlineValidation" class="demo-nav-link">
            ← PREVIOUS: INLINE VALIDATION
        </a>
        <a asp-controller="Home" asp-action="LazyTabs" class="demo-nav-link">
            NEXT: LAZY TABS →
        </a>
    </div>

    <section id="example">
        <h2>Lazy Load (ASP.NET MVC)</h2>
        <p>This example shows how to lazily load an element on a page.</p>
        
        <style>
            .loading-spinner {
                width: 40px;
                height: 40px;
                border: 4px solid #f3f3f3;
                border-top: 4px solid #3498db;
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }

            @@keyframes spin {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
            }
        </style>
        
        <div id="graph" data-init="@@get('/Home/LazyLoadImgGraph')">
            <div style="display: flex; align-items: center; justify-content: center; gap: 1rem; padding: 2rem; background: rgba(255, 255, 255, 0.05); border-radius: 4px;">
                <div class="loading-spinner"></div>
                <span>Loading...</span>
            </div>
        </div>
    </section>

    <div style="display: flex; justify-content: space-between; gap: 1rem;">
        <a asp-controller="Home" asp-action="InlineValidation" class="demo-nav-link">
            ← PREVIOUS: INLINE VALIDATION
        </a>
        <a asp-controller="Home" asp-action="LazyTabs" class="demo-nav-link">
            NEXT: LAZY TABS →
        </a>
    </div>
</div>

@await Html.PartialAsync("_MoreExamples")