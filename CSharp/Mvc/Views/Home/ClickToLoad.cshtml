@{
    ViewData["Title"] = "Click To Load (ASP.NET MVC)";
}

<div class="demo-section">
    <div style="display: flex; justify-content: space-between; gap: 1rem;">
        <a asp-controller="Home" asp-action="ClickToEdit" class="demo-nav-link">
            ← PREVIOUS: CLICK TO EDIT
        </a>
        <a asp-controller="Home" asp-action="DeleteRow" class="demo-nav-link">
            NEXT: DELETE ROW →
        </a>
    </div>

    <section id="example">
        <h2>Click To Load (ASP.NET MVC)</h2>
        <p>This example shows how to implement click-to-load the next page in a table of data, the crux of the demo is
            the final row</p>
        <div class="demo-content" role="region" aria-label="Click To Load (ASP.NET MVC) Demo Visualization">
            <p id="total-count">
                Showing @ViewData["CurrentCount"] of @ViewData["TotalCount"] notes
            </p>
            <div id="notes-list" class="notes-list">
                @foreach (var note in Model)
                {
                    <div class="note-item">
                        <p>@note.Content</p>
                    </div>
                }
            </div>
            <div class="button-container">
                <button id="load-more-btn"
                    data-signals="{offset: 0, limit: 2}"
                    data-indicator:_fetching
                    data-on:click="!$_fetching && @@get('/Home/ClickToLoadMore')"
                    class="button">
                    <span data-show="!$_fetching">Load More</span>
                    <span data-show="$_fetching" aria-live="polite" style="margin-left: 0.5rem;">Loading…</span>
                </button>
            </div>
        </div>
    </section>

    <div style="display: flex; justify-content: space-between; gap: 1rem;">
        <a asp-controller="Home" asp-action="ClickToEdit" class="demo-nav-link">
            ← PREVIOUS: CLICK TO EDIT
        </a>
        <a asp-controller="Home" asp-action="DeleteRow" class="demo-nav-link">
            NEXT: DELETE ROW →
        </a>
    </div>
</div>

@await Html.PartialAsync("_MoreExamples")